@page
@model Memcach.Pages.Users.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>@Model.User.FirstName @Model.User.LastName</h1>

<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">First Name</dt>
        <dd class="col-sm-10">@Model.User.FirstName</dd>

        <dt class="col-sm-2">Last Name</dt>
        <dd class="col-sm-10">@Model.User.LastName</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.User.Email</dd>

        <dt class="col-sm-2">Created At</dt>
        <dd class="col-sm-10">@Model.User.CreatedAt</dd> <!-- แสดงวันที่สร้าง -->
    </dl>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>
