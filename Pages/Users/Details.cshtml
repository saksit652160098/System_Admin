@page
@model Memcach.Pages.Users.DetailsModel

@{
    ViewData["Title"] = "User Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container mt-4">
        <h1 class="text-center mb-4">@Model.User.FirstName @Model.User.LastName</h1>

        <div>
            <h4>User Information</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">First Name</dt>
                <dd class="col-sm-10">@Model.User.FirstName</dd>

                <dt class="col-sm-2">Last Name</dt>
                <dd class="col-sm-10">@Model.User.LastName</dd>

                <dt class="col-sm-2">Email</dt>
                <dd class="col-sm-10">@Model.User.Email</dd>

                <dt class="col-sm-2">Created At</dt>
                <dd class="col-sm-10">@Model.User.CreatedAt.ToString("g")</dd> <!-- แสดงวันที่สร้าง -->
            </dl>
        </div>

        <div class="text-center mt-3">
            <a class="btn btn-secondary" asp-page="Index">Back to List</a>
        </div>
    </div>
</body>
</html>
