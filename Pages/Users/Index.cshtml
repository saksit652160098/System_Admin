@page
@model Memcach.Pages.Users.IndexModel

@{
    ViewData["Title"] = "User Index";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">User Index</h1>

    <div class="text-right mb-3">
        <a class="btn btn-primary" asp-page="Create">Create New</a> <!-- สีปุ่มสร้าง -->
    </div>

    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.User[0].FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User[0].LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User[0].Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User[0].CreatedAt)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User[0].TimeTaken) <!-- แสดง TimeTaken -->
                </th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.User)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedAt)
                    </td>
                    <td>
                        @item.TimeTaken.ToString("F") ms
                    </td>
                    <td class="text-center">
                        <a class="btn btn-warning btn-sm" asp-page="./Edit" asp-route-id="@item.ID">Edit</a> <!-- ปุ่มแก้ไข -->
                        <a class="btn btn-info btn-sm" asp-page="./Details" asp-route-id="@item.ID">Details</a> <!-- ปุ่มรายละเอียด -->
                        <a class="btn btn-danger btn-sm" asp-page="./Delete" asp-route-id="@item.ID">Delete</a> <!-- ปุ่มลบ -->
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
